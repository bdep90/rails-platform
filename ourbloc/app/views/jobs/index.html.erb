<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th data-field="title">Title</th>
      <th data-field="description">Description</th>
      <th data-field="deadline">Deadline</th>
      <th data-field="sector">Bloc</th>
      <th data-field="date">Created</th>
      <th data-field="table-links"></th>
    </tr>
  </thead>

  <tbody>
  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.title %></td>
      <td><%= job.description %></td>
      <td><%= job.deadline %></td>
      <td><%= job.sector %></td>
      <td><%= job.created_at.strftime("%m/%d/%y") %></td>
      <td><%= link_to 'Edit', edit_job_path(job) %> | <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Job', new_job_path %>
