<p id="notice"><%= notice %></p>

<h1>Asks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asks.each do |ask| %>
      <tr>
        <tr>
          <%= ask.title %>
        </tr>
        <tr>
          <%= ask.body %>
        </tr>
        <tr>
          <%= ask.sector %>
        </tr>
        <tr>
          <%= link_to 'Edit', edit_ask_path(ask) %> | <%= link_to 'Destroy', ask, method: :delete, data: { confirm: 'Are you sure?' } %>
        </tr>
      </tr>
      <br>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Ask', new_ask_path %>
