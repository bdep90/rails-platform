<p id="notice"><%= notice %></p>

<h1>Shares</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shares.each do |share| %>
      <tr>
        <tr>
          <%= share.title %>
        </tr>
        <tr>
          <%= share.body %>
        </tr>
        <tr>
          <%= share.sector %>
        </tr>
        <tr>
          <%= link_to 'Edit', edit_share_path(share) %> | <%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %>
        </tr>
      </tr>
      <br>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Share', new_share_path %>
